{
  "openapi": "3.0.0",
  "info": {
    "title": "Bread Information API",
    "version": "1.0.0",
    "description": "API for retrieving and managing information about different types of bread."
  },
  "servers": [
    {
      "url": "http://localhost:8081/api",
      "description": "Local server"
    }
  ],
  "paths": {
    "/breads": {
      "get": {
        "summary": "Get list of bread types",
        "responses": {
          "200": {
            "description": "A list of bread types",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/Bread"
                  }
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "Bread": {
        "type": "object",
        "properties": {
          "id": {
            "type": "integer"
          },
          "name": {
            "type": "string"
          },
          "origin": {
            "type": "string"
          },
          "ingredients": {
            "type": "array",
            "items": {
              "type": "string"
            }
          },
          "characteristics": {
            "type": "string"
          }
        },
        "required": ["id", "name", "origin", "ingredients", "characteristics"]
      }
    }
  }
}
